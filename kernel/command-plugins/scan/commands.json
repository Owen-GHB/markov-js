{
  "scan": {
    "commandType": "kernel-plugin",
    "methodName": "run",
    "description": "Scan project for contract issues and generate report",
    "parameters": {
      "scannerOutputFile": {
        "type": "string", 
        "required": false,
        "default": "./context/scan.md",
        "description": "Output file for scan results"
      },
      "fix": {
        "type": "boolean",
        "required": false,
        "default": false,
        "description": "Automatically fix file organization issues"
      },
      "scanDir": {
        "type": "string",
        "required": false,
        "description": "Directory to scan (defaults to current project)"
      }
    }
  }
}